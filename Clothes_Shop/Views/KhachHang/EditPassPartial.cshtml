@model Clothes_Shop.Models.KHACHHANG

@using (Html.BeginForm("EditPass"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>KHACHHANG</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <span>Nhập mật khẩu cũ </span> <br />
            <div class="col-md-10">
                <input type="password" name="OldPass" />
                @if (TempData["MKS"] != null)
                {
                    <span id="Pass" class="alert alert-danger hide" role="alert">@ViewBag.ThongBao</span>
                }
            </div>
        </div>

        <div class="form-group">
            <span>Nhập mật khẩu mới </span> <br />

            <div class="col-md-10">
                <input type="password" name="NewPass" id="newpass" />
            </div>
        </div>

        <div class="form-group">
            <span>Nhập lại mật khẩu mới</span> <br />
            <div class="col-md-10">
                <input type="password" name="EnterNewPass" id="enternewpass" />
                <span id="mes"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2-col-md-10">
                <button type="submit" id="btnDangKy" name="DangKy"> <b>ĐĂNG KÝ</b></button><br />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index", "TrangChu")
</div>

<script type="text/javascript">
    $('#btnDangKy').click(function () {
        if ($('#newpass').val() != $('#enternewpass').val()) {
            $('#mes').text("Mật khẩu nhập lại không khớp!");
            return false;
        }
    });

</script>