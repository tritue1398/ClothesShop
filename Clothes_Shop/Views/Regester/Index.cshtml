@model Clothes_Shop.Models.KHACHHANG
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="~/Content/format.css" />
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <title>Tạo tài khoản</title>
</head>
<body>

    <div id="banner">
        <div class="image">
            <a href="~/TrangChu/Index"><img src="~/image/Home.jpg" /></a>
        </div>
        <div class="search">
            <input type="text" placeholder="Tìm kiếm sản phẩm" />
            <button title="Tìm kiếm" type="submit" style="cursor:pointer"> <img src="~/image/find.png" /></button>
        </div>
        <div class="regester">
            @Html.Action("RegesterPartial", "Regester")
        </div>
        <div class="basket">
            @Html.Action("GioHangPartial", "GioHang")
        </div>
    </div>
    <!--End banner-->
    <div id="head">
        <div class="phone">
            <img src="~/image/phone.png" />
            <span> Hỗ trợ đặt hàng nhanh:  </span>
            <span style="color:red"> &nbsp;0344359333</span>
        </div>
        <div class="connect">
            <span>Liên hệ &nbsp; </span> <span><a href="https://www.facebook.com/duong.tritue.9" target="_blank"><img src="~/image/Facebook.png" /></a></span>
            <span><a href="https://www.instagram.com/_tri.tue98/?hl=en" target="_blank"><img src="~/image/Instagram.png" /></a></span>
            <span>|</span>
            <span> <a href="#"> Thông báo</a> </span> <span><a href="#"><img src="~/image/notice.png" /></a></span>
            <span>|</span>
            <span><a href="https://help.shopee.vn/vn/s/" target="_blank"> Trợ giúp</a></span>
            <span> <a href="https://help.shopee.vn/vn/s/" target="_blank"><img src="~/image/help.png" /></a></span>
        </div>
    </div>
    <!--End Head-->
    <div id="title">
        @Html.Action("DanhMucPartial", "DanhMuc")
    </div>
    <!--End title-->
    <div id="content">

        <div class="left">
            @using (Html.BeginForm())
            {
                <h4> Đăng kí tài khoản mới</h4> <br />
                <div style="margin-left: 100px;">
                    <span>  <b>Đăng nhập</b> hoặc <b>đăng ký</b> để tận hưởng mua sắm nhanh hơn và dễ dàng hơn</span>  <br />
                    <span> Họ và tên* </span>  <br />
                    <input type="text" placeholder="Họ và tên" name="HoTen" id="hoten" value="" />
                    <span id="spanHoTen" class="alert alert-danger hide" role="alert"></span><br />

                    <span> Tên tài khoản* </span>  <br />
                    <input type="text" placeholder="Tên tài khoản" name="TaiKhoan" id="taikhoan" value="" />
                    <span id="spanTaiKhoan" class="alert alert-danger hide" role="alert"></span>
                   
                    @if (TempData["TonTai"] != null)
                    {
                       
                       <br />
                      <span id="mesTaiKhoan" class="alert alert-danger hide" role="alert">@ViewBag.ThongBao</span>
                       
                    }

                    <br />
                    <span> Mật khẩu* </span>  <br />
                    <input type="password" placeholder="Mật khẩu " name="MatKhau" id="matkhau" value="" />
                    <span id="spanPass" class="alert alert-danger hide" role="alert"></span><br />


                    <span> Xác nhận mật khẩu* </span>  <br />
                    <input type="password" placeholder="Xác nhận mật khẩu" name="EnterPass" id="enterPass" value="" />
                    <span id="spanEnterPass" class="alert alert-danger hide" role="alert"></span><br />


                    <span> Email* </span>  <br />
                    <input type="text" placeholder="Email" name="Email" id="email" value="" />
                    <span id="spanEmail" class="alert alert-danger hide" role="alert"></span><br />


                    <span> Địa chỉ* </span>  <br />
                    <input type="text" placeholder="Địa chỉ" name="DiaChi" id="diachi" value="" />
                    <span id="spanDiaChi" class="alert alert-danger hide" role="alert"></span><br />


                    <span> Số điện thoại* </span>  <br />
                    <input type="number" placeholder="Số điện thoại" name="DienThoai" id="dienthoai" value="" />
                    <span id="spanSoDT" class="alert alert-danger hide" role="alert"></span><br />


                    <button style="margin-left: 330px;" type="submit" id="btnDangKy" name="DangKy">  <b>ĐĂNG KÝ</b></button><br />
                    <span>
                        <b>Note: </b>Khi bạn nhấn ĐĂNG KÍ, là bạn đã đồng ý thực hiện mọi
                        giao dịch mua bán theo điều kiện sử dụng &<br /> chính sách của FASHION.
                    </span>
                </div>
            }
            
        </div>

       
    </div>
    <div class="right">
        <div>
            <h3>Là thành viên của Fashion, Quý khách được hưởng:</h3>
            <ul>
                <li>Đăng nhập mọi lúc mọi nơi để kiểm tra trạng thái đơn hàng.</li>
                <li>Dễ dàng xem lại những sản phẩm Quý khách đã mua.</li>
                <li>Cập nhập các thông báo của fashion để có đc giá ưa đãi tốt nhất</li>
            </ul>
        </div>

    </div>
    </div>
    <!--End content-->
    <div id="footer">
        <div class="address">
            <h3>FASHION</h3>

            <span>Fashion chuyên bán các loại sản phẩm quần áo thời trang  online với hàng ngàn mẫu mã để quý khách lựa chọn.</span><br />
            <span> Hãy đặt hàng online để được hưởng nhiều ưu đãi hơn.</span><br />
            <span> Chọn mua ngay các mẫu quần áo thời trang mới nhất 2019, hàng đẹp giá cực tốt.</span><br />


            <span><img src="~/image/shop.png" /></span>
            <span>Nhà 23/6, Đường 12, khu phố 2, phường Linh Chiểu, Quận Thủ Đức, To.HCM</span> <br />

            <span> <img src="~/image/phone.png" /></span>
            <span>ĐT: 0383592126</span> <br />

            <span><img src="~/image/time.png" /></span>
            <span>Giờ mở cửa: T2 - T7: 8h00 - 21h30; CN: 9h00 - 17h30</span><br />

            <span><img src="~/image/phone.png" /></span>
            <span>Hotline: 0344359333</span><br />
        </div>

        <div class="policy">
            <h3>CHÍNH SÁCH BÁN HÀNG</h3>
            <ul>
                <li><a href="~/Footer/Index"> Thông tin về cửa hàng</a></li>
                <li><a href="~/Footer/PayMothod"> Phương thức thanh toán </a></li>
                <li><a href="~/Footer/TransitMothod"> Phương thức vận chuyển</a></li>
                <li><a href="#"> Địa chỉ shop FASHION</a></li>

            </ul>
        </div>
        <div class="acount">
            <h3>TÀI KHOẢN</h3>
            <ul>
                <li><a href="~/Regester/Login">Đăng nhập</a></li>
                <li><a href="~/Regester/Index">Đăng kí tài khoản</a></li>
            </ul>
        </div>
    </div>
    <!--End footer-->

    <script type="text/javascript">
        
        $('#btnDangKy').click(function () {
            var i = 0;
            if ($('#hoten').val() == "") {
                $('#spanHoTen').text("Họ tên không được để trống!");
                i++;
                
            }
            if ($('#taikhoan').val() == "") {
                $('#spanTaiKhoan').text("Tài khoản không được để trống!");
                i++;
               
            }
            if ($('#matkhau').val() == "") {
                $('#spanPass').text("Mật khẩu không được để trống!");
               
            }
            if ($('#enterPass').val() != $('#matkhau').val()) {
                $('#spanEnterPass').text("Mật khẩu nhập lại không đúng!");
                i++;
            }
           
            if ($('#diachi').val() == "") {
                $('#spanDiaChi').text("Địa chỉ không được để trống!");
                i++;
            }
            if ($('#dienthoai').val() == "") {
                $('#spanSoDT').text("Số điện thoại không được để trống!");
                i++;
            }
            if (i > 0) {
              
                return false;
            }
            return true;

        });
        $('#spanHoTen').removeClass('hide');
        $('#spanHoTen').delay(2000).slideUp(1000); 
        $('#spanTaiKhoan').removeClass('hide');
        $('#spanTaiKhoan').delay(2000).slideUp(1000); 
        $('#spanPass').removeClass('hide');
        $('#spanPass').delay(2000).slideUp(1000); 
        $('#spanEnterPass').removeClass('hide');
        $('#spanEnterPass').delay(2000).slideUp(1000); 
        $('#spanEmail').removeClass('hide');
        $('#spanEmail').delay(2000).slideUp(1000); 
        $('#spanDiaChi').removeClass('hide');
        $('#spanDiaChi').delay(2000).slideUp(1000);
        $('#spanSoDT').removeClass('hide');
        $('#spanSoDT').delay(2000).slideUp(1000); 
        $('#mesTaiKhoan').removeClass('hide');
        $('#mesTaiKhoan').delay(2000).slideUp(1000); 
        
    </script>
</body>
</html>

